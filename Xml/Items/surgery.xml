<?xml version="1.0" encoding="utf-8" ?>
<Items>
    <!-- Surgery Items -->
    <!-- The Spoon -->
    <Item
        identifier="it_spoon"
        aliases="eyespoon"
        category="Equipment"
        Tags="smallitem,simpletool,tool,eyesurgery,surgery,surgerytool"
        cargocontaineridentifier="metalcrate"
        impactsoundtag="impact_metal_light"
        RequireAimToUse="True"
        scale="0.25">
        <PreferredContainer
            secondary="wreckmedcab,abandonedmedcab,piratemedcab"
            amount="1"
            spawnprobability="0.001" />

        <Fabricate
            suitablefabricators="fabricator"
            requiredtime="10">
            <RequiredSkill
                identifier="mechanical"
                level="20" />
            <RequiredItem
                identifier="steel" />
        </Fabricate>

        <Deconstruct
            time="15">
            <Item
                identifier="iron" />
        </Deconstruct>

        <Sprite
            texture="%ModDir%/Textures/ItemIcons.png"
            sourcerect="896,896,128,128"
            depth="0.55"
            origin="0.5,0.5" />

        <Body
            width="60"
            height="12"
            density="50" />

        <MeleeWeapon
            slots="Any,RightHand,LeftHand"
            aimpos="40,5"
            handle1="-10,0"
            holdangle="60"
            reload="1.0"
            range="15"
            combatpriority="7"
            msg="ItemMsgPickUpSelect">
            <Attack
                structuredamage="1"
                itemdamage="2"
                targetimpulse="2">
                <Sound
                    file="Content/Sounds/Damage/LimbSlash1.ogg"
                    selectionmode="random"
                    range="500" />

                <Sound
                    file="Content/Sounds/Damage/LimbSlash2.ogg"
                    range="500" />

                <Sound
                    file="Content/Sounds/Damage/LimbSlash3.ogg"
                    range="500" />

                <Sound
                    file="Content/Sounds/Damage/LimbSlash4.ogg"
                    range="500" />

                <Sound
                    file="Content/Sounds/Damage/LimbSlash5.ogg"
                    range="500" />

                <Sound
                    file="Content/Sounds/Damage/LimbSlash6.ogg"
                    range="500" />

                <Affliction
                    identifier="lacerations"
                    amount="2" />
            </Attack>
            <StatusEffect
                type="OnUse"
                target="UseTarget">
                <LuaHook
                    name="NTEYE.Spoon" />
            </StatusEffect>
        </MeleeWeapon>

        <aitarget
            sightrange="1000"
            soundrange="400"
            fadeouttime="2" />
    </Item>

    <!-- Eye Drop -->
    <Item
        identifier="it_eyedrop"
        aliases="eyedrops"
        category="Medical"
        maxstacksize="32"
        maxstacksizecharacterinventory="8"
        scale="0.1"
        useinhealthinterface="True"
        impactsoundtag="impact_soft"
        cargocontaineridentifier="mediccrate"
        impacttolerance="5.5"
        Tags="smallitem,medical,eyesurgery,surgery,surgerytool">
        <PreferredContainer
            secondary="wreckmedcab,abandonedmedcab,piratemedcab"
            spawnprobability="0.09" />

        <Sprite
            texture="%ModDir%/Textures/ItemIcons.png"
            sourcerect="128,896,128,128"
            depth="0.6"
            origin="0.5,0.5" />

        <Body
            width="14"
            height="22"
            density="10" />

        <Price
            baseprice="70"
            soldbydefault="false">
            <Price
                storeidentifier="merchantmedical"
                multiplier="1"
                sold="true"
                minavailable="2" />
        </Price>

        <Fabricate
            suitablefabricators="medicalfabricator"
            requiredtime="5">
            <RequiredSkill
                identifier="medical"
                level="30" />

            <RequiredItem
                identifier="pomegrenadeextract" />

            <RequiredItem
                identifier="antibloodloss1" />
        </Fabricate>

        <MeleeWeapon
            slots="Any,RightHand,LeftHand"
            aimpos="5,0"
            handle1="-5,0"
            holdangle="10"
            reload="1.0">
            <StatusEffect
                type="OnBroken"
                target="This">
                <Remove />
            </StatusEffect>
        </MeleeWeapon>
    </Item>

