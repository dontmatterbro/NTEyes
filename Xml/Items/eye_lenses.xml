                storeidentifier="merchantmedical"
                sold="true" />
        </Price>

        <Fabricate
            suitablefabricators="medicalfabricator"
            requiredtime="3">
            <RequiredSkill
                identifier="medical"
                level="40" />
            <RequiredItem
                identifier="carbon" />
        </Fabricate>

        <Deconstruct
            time="3" />

        <MeleeWeapon
            slots="Any,RightHand,LeftHand"
            aimpos="5,0"
            handle1="-5,0"
            holdangle="10"
            reload="1.0">
            <RequiredSkill
                identifier="medical"
                level="30" />

            <StatusEffect
                type="OnUse"
                target="This">
                <!-- add custom SFX for this <Sound file="Content/Items/Medical/Syringe.ogg" range="500" /> -->
            </StatusEffect>

            <StatusEffect
                type="OnBroken"
                target="This">
                <Remove />
            </StatusEffect>
        </MeleeWeapon>
    </Item>

