<Afflictions>
    <!-- Mechanical Afflictions -->
    <!-- Dead Eyes -->
    <Affliction
        identifier="mc_deadeyes"
        limbspecific="false"
        indicatorlimb="Head"
        showiconthreshold="1"
        showinhealthscannerthreshold="0"
        maxstrength="2"
        type="eye_mechanic"
        isbuff="false"
        healableinmedicalclinic="false"
        iconcolors="255,0,0,255">
        <icon
            texture="%ModDir%/Textures/AfflictionIcons.png"
            origin="0.5204671,0.4915201"
            sourcerect="128,896,128,128" />

        <Effect
            minstrength="0"
            maxstrength="2"
            minscreendistort="100"
            maxscreendistort="100"
            minscreenblur="100"
            maxscreenblur="100"
            minradialdistort="100"
            maxradialdistort="100"
            minchromaticaberration="200"
            maxchromaticaberration="200"
            minskillmultiplier="0.15"
            maxskillmultiplier="0.15"
            minspeedmultiplier="0.5"
            maxspeedmultiplier="0.5">
            <StatusEffect
                target="Character">
                <!-- Try to add a special animation for this -->
                <TriggerAnimation
                    Type="Walk"
                    filename="DrunkenWalk"
                    priority="6"
                    ExpectedSpecies="Human" />

                <TriggerAnimation
                    Type="Run"
                    filename="DrunkenRun"
                    priority="6"
                    ExpectedSpecies="Human" />
            </StatusEffect>
        </Effect>

        <AfflictionOverlay
            texture="%ModDir%/Textures/Overlays/gradientoverlay.png" />

        <!-- <icon 
            texture="%ModDir%/Textures/AfflictionIcons.png" 
