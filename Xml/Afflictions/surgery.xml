            sourcerect="0,512,128,128" />

        <Effect
            minstrength="0"
            maxstrength="2"
            minscreendistort="1"
            maxscreendistort="1"
            minscreenblur="1"
            maxscreenblur="1"
            minradialdistort="1"
            maxradialdistort="1"
            minchromaticaberration="1"
            maxchromaticaberration="1"
            minskillmultiplier="0.10"
            maxskillmultiplier="0.10"
            maxspeedmultiplier="0.5">
            <StatusEffect
                target="Character">
