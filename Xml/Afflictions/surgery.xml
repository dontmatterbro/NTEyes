    <Affliction
        identifier="sr_removedeyes"
        limbspecific="false"
        indicatorlimb="Head"
        showiconthreshold="0.99"
        showinhealthscannerthreshold="0"
        maxstrength="2"
        type="eye_surgery"
        isbuff="false"
        healableinmedicalclinic="false"
        iconcolors="84,211,211,255">
        <icon
